{
  "plugins": [
    {
      "type": "linked-versions",
      "groupName": "group-some-associated-services",
      "components": [],
      "merge": true
    }
  ],
  "separate-pull-requests": false,
  "commit-search-depth": 50,
  "release-search-depth": 50,
  "always-link-local": true,
  "include-v-in-tag": true,
  "tag-separator": "@",
  "bump-minor-pre-major": true,
  "bump-patch-for-minor-pre-major": true,
  "draft": false,
  "prerelease": false,

  "pull-request-header": "ðŸ¤– Release created:",
  "pull-request-footer": "_release-please generated PR_",

  "packages": {
    ".": {
      "component": "donation-app",
      "release-type": "rust",
      "exclude-paths": [
        "service/web-server",
        "service/auth-ui",
        ".release-please-config.json",
        ".release-please-manifest.json",
        "Cargo.toml"
      ]
    },

    "service/web-server": {
      "component": "web-server",
      "release-type": "node", 
      "extra-files": [
        {
          "type": "yaml",
          "path": "manifest/web_server/production/kustomization.yml",
          "jsonpath": "$.images[0].newTag"
        }
      ]
    },

    "service/auth-ui": {
      "component": "auth-ui",
      "release-type": "node",
      "extra-files": [
        {
          "type": "yaml",
          "path": "manifest/auth_ui/production/kustomization.yml",
          "jsonpath": "$.images[0].newTag"
        }
      ]

    }
  },
  "$schema": "https://raw.githubusercontent.com/googleapis/release-please/main/schemas/config.json"
}
