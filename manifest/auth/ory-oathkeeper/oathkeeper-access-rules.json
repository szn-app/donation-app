[
  {
    "id": "api-rule",
    "upstream": {
      "url": "http://prod-web-server-v1.donation-app.svc.cluster.local",
      "preserve_host": true
    },
    "match": {
      "url": "//api.wosoom.com/<.*>",
      "methods": ["GET", "POST", "OPTIONS", "PUT", "PATCH", "HEAD", "DELETE"]
    },
    "authenticators": [
      {
        "handler": "jwt",
        "config": {
          "scope_strategy": "none"
        }
      }
    ],
    "authorizer": {
      "handler": "keto_engine_acp_ory"
    },
    "mutators": [
      {
        "handler": "header",
        "config": null
      }
    ],
    "errors": [
      {
        "handler": "json"
      }
    ]
  },
  {
    "id": "k8s-admin-rule",
    "upstream": {
      "url": "http://kubernetes-dashboard-kong-proxy.kubernetes-dashboard",
      "preserve_host": true
    },
    "match": {
      "host": "//kubernetes-dashboard.k8s.wosoom.com/<.*>"
    },
    "authenticators": [
      {
        "handler": "jwt",
        "config": {
          "scope_strategy": "none"
        }
      }
    ],
    "authorizer": {
      "handler": "deny"
    },
    "mutators": [
      {
        "handler": "header",
        "config": null
      }
    ],
    "errors": [
      {
        "handler": "json"
      }
    ]
  }
]
