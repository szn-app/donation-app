[
  {
    "id": "backend-rule",
    "upstream": {
      "url": "http://backend-app-charts.auth"
    },
    "match": {
      "url": "http://backend-test.wosoom.com/<.*>",
      "methods": ["GET", "POST", "OPTIONS", "PUT", "PATCH"]
    },
    "authenticators": [
      {
        "handler": "jwt",
        "config": {
          "scope_strategy": "none"
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "USER_ID": "{{ print .Subject }}"
          }
        }
      }
    ],
    "errors": [
      {
        "handler": "json"
      }
    ]
  },
  {
    "id": "location-rule",
    "match": {
      "url": "http://location-app-charts.auth/<.*>",
      "methods": ["GET", "POST", "OPTIONS", "PUT", "PATCH", "HEAD"]
    },
    "authenticators": [
      {
        "handler": "jwt",
        "config": {
          "scope_strategy": "hierarchic",
          "required_scope": ["location:read"]
        }
      }
    ],
    "authorizer": {
      "handler": "allow"
    },
    "mutators": [
      {
        "handler": "header",
        "config": {
          "headers": {
            "USER_ID": "{{ print .Subject }}"
          }
        }
      }
    ],
    "errors": [
      {
        "handler": "json"
      }
    ]
  }
]
